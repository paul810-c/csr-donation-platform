<?xml version="1.0"?>
<ruleset name="Laravel Project Rules">
    <description>PHP_CodeSniffer configuration</description>

    <file>app</file>
    <file>tests</file>

    <exclude-pattern>vendor/*</exclude-pattern>
    <exclude-pattern>storage/*</exclude-pattern>

    <rule ref="PSR12" />

    <arg name="colors"/>
    <arg name="parallel" value="4"/>
</ruleset>
